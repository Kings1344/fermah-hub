    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary-violet': '#7C3AED',
                        'accent-green': '#34D399', /* For stats */
                    }
                }
            }
        }

        // IMPORTANT: Use document.execCommand('copy') for better iframe compatibility
        function copyText(elementId, buttonElement) {
            const element = document.getElementById(elementId);
            const textToCopy = element.innerText || element.textContent;

            // Create a temporary textarea to hold the text
            const textarea = document.createElement('textarea');
            textarea.value = textToCopy;
            document.body.appendChild(textarea);
            
            // Select the text
            textarea.select();
            
            try {
                // Execute the copy command
                const successful = document.execCommand('copy');
                
                if (successful) {
                    const originalTooltipText = buttonElement.getAttribute('data-tooltip');
                    const tooltip = buttonElement.querySelector('.tooltip');
                    
                    if (tooltip) {
                        tooltip.textContent = 'Copied!';
                        // Reset the tooltip text after a delay
                        setTimeout(() => {
                            tooltip.textContent = originalTooltipText;
                        }, 2000);
                    }
                } else {
                    console.error('Copy command was unsuccessful.');
                }
            } catch (err) {
                console.error('Oops, unable to copy', err);
            } finally {
                // Remove the temporary textarea
                document.body.removeChild(textarea);
            }
        }

    </script>
